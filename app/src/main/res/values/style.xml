<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Header" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/header</item>
    </style>


    <style name="Msgbox" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:background">@drawable/msgbox_bar</item>
    </style>


    <style name="BaseText" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Head" parent="BaseText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>
    <style name="Title" parent="BaseText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">30dp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>
    <style name="Text" parent="BaseText">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">18dp</item>
        <item name="android:fontFamily">@font/bold</item>
    </style>


    <style name="BaseButton" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/medium</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="Button" parent="BaseButton">
        <item name="android:background">@drawable/button</item>
    </style>
    <style name="ButtonIcon" parent="BaseButton">
        <item name="android:background">@drawable/button_icon</item>
    </style>
    <style name="ButtonValid" parent="BaseButton">
        <item name="android:background">@drawable/button_valid</item>
    </style>
    <style name="ButtonCancel" parent="BaseButton">
        <item name="android:background">@drawable/button_cancel</item>
    </style>
    <style name="ButtonNeutral" parent="BaseButton">
        <item name="android:background">@drawable/button_neutral</item>
    </style>
    <style name="ButtonLevel" parent="BaseButton">
        <item name="android:background">@drawable/button_level</item>
    </style>
    <style name="ButtonLevelLock" parent="BaseButton">
        <item name="android:background">@drawable/button_level_lock</item>
    </style>

</resources>

